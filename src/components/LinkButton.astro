---
interface Props {
	href: string;
	className?: string;
	ariaLabel?: string;
	title?: string;
	disabled?: boolean;
	openInNewTab?: boolean;
}

const {
	href,
	className = "",
	ariaLabel,
	title,
	disabled = false,
	openInNewTab = true,
} = Astro.props;
---

{
	disabled ? (
		<span
			class:list={["group inline-block", className]}
			aria-label={ariaLabel}
			title={title}
			aria-disabled={disabled}
		>
			<slot />
		</span>
	) : (
		<a
			{href}
			class:list={["group inline-block hover:text-skin-accent", className]}
			aria-label={ariaLabel}
			title={title}
			target={openInNewTab ? "_blank" : "_self"}
		>
			<slot />
		</a>
	)
}
